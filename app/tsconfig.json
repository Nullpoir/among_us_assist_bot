{
  "compileOnSave": true,
  "compilerOptions": {
    "target": "ES2016",
    "module": "CommonJS",
    "outDir": "./production",
    "rootDir": "./src",
    "removeComments": true,
    "strict": true,
    "noImplicitThis": true,
    "noUnusedLocals": true,
    "noUnusedParameters": true,
    "noImplicitReturns": true,
    "noFallthroughCasesInSwitch": true,
    "forceConsistentCasingInFileNames": true,
    "moduleResolution": "node",
    "esModuleInterop": true,
    "experimentalDecorators": true,
    "pretty": true,
    "newLine": "CRLF"
  },
  "baseUrl": "./",
  "paths": {
    "*": [
      "node_modules/*",
      "src/*"
    ]
  },
  "include": [
    "src/**/*"
  ]
}
